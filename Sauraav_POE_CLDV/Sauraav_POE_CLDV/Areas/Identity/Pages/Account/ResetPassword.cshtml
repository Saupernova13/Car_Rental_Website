@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h1style ="color:white">@ViewData["Title"]</h1style>
<h2style ="color:white">Reset your password.</h2style>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" style="color:white" />
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label style="color:white" asp-for="Input.Email" class="form-label"></label>
                <span style="color:white" asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label style="color:white" asp-for="Input.Password" class="form-label"></label>
                <span style="color:white" asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label style="color:white" asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span style="color:white" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button style="color:white" type="submit" class="w-100 btn btn-lg btn-primary">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
