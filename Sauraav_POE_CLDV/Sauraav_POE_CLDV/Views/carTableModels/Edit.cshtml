@model Sauraav_POE_CLDV.Models.carTableModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    h1,
    h4,
    a,
    input[type="text"],
    input[type="submit"],
    .form-check-label {
        color: white;
    }

    .form-group {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        color: white;
        padding: 10px;
    }

    label.control-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .center {
        text-align: center;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

</style>

<h1>Edit</h1>

<h4>carTableModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="carNo"  />
            <div class="form-group">
                <label asp-for="carmake" class="col-form-label mt-4"></label>
                <input asp-for="carmake" class="form-control" />
                <span asp-validation-for="carmake" class="text-danger"></span>
                <br />
                <label asp-for="carModel" class="control-label"></label>
                <input asp-for="carModel" class="form-control" />
                <span asp-validation-for="carModel" class="text-danger"></span>
                <br />
                <label asp-for="carBodyType" class="control-label"></label>
                <input asp-for="carBodyType" class="form-control" />
                <span asp-validation-for="carBodyType" class="text-danger"></span>
                <br />
                <label asp-for="kilometresTraveled" class="control-label"></label>
                <input asp-for="kilometresTraveled" class="form-control" />
                <span asp-validation-for="kilometresTraveled" class="text-danger"></span>
                <br />
                <label asp-for="kilometresServiced" class="control-label"></label>
                <input asp-for="kilometresServiced" class="form-control" />
                <span asp-validation-for="kilometresServiced" class="text-danger"></span>
                <br />
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="available" /> @Html.DisplayNameFor(model => model.available)
                </label>
                <div class="centre">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
