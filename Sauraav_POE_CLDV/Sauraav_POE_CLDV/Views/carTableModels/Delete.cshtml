@model Sauraav_POE_CLDV.Models.carTableModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    h1,
    h3,
    h4,
    a,
    .form-check-label,
    .col-form-label {
        color: white;
    }

    dl.row {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        color: white;
        padding: 10px;
    }

    dt.col-sm-2 {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .center {
        text-align: center;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-group {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        color: white;
        padding: 10px;
    }
</style>

<h1 class="center">Delete</h1>

<h3 class="center">Are you sure you want to delete this?</h3>
<div>
    <h4 class="center">From The Car Table</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Car Make:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.carmake)
        </dd>
        <dt class="col-sm-2">
            Car Model:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.carModel)
        </dd>
        <dt class="col-sm-2">
            Car Body Type:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.carBodyType)
        </dd>
        <dt class="col-sm-2">
            Kilometres Traveled:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kilometresTraveled)
        </dd>
        <dt class="col-sm-2">
            Kilometres Serviced:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kilometresServiced)
        </dd>
        <dt class="col-sm-2">
            Is Available:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.available)
        </dd>
    </dl>

    <form asp-action="Delete" class="center">
        <input type="hidden" asp-for="carNo" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>