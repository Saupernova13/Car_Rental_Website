@model Sauraav_POE_CLDV.Models.carTableModel
@{
    ViewData["Title"] = "Details";
}
<style>
    h1,
    h4,
    a,
    .form-check-label {
        color: white;
    }

    dl.row {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        color: white;
        padding: 10px;
    }

    dt.col-sm-2 {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .center {
        text-align: center;
    }
</style>
<h1 class="center">Details</h1>
<div>
    <h4 class="center">Item From Car Table</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Car Make:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.carmake)
        </dd>
        <dt class="col-sm-2">
            Car Model:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.carModel)
        </dd>
        <dt class="col-sm-2">
            Car Body Type:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.carBodyType)
        </dd>
        <dt class="col-sm-2">
            Kilometres Traveled:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kilometresTraveled)
        </dd>
        <dt class="col-sm-2">
            Kilometres Serviced:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kilometresServiced)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.available)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.available)
        </dd>
    </dl>
</div>
<div class="center">
    <a asp-action="Edit" asp-route-id="@Model?.carNo" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>