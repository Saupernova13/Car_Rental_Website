@model Sauraav_POE_CLDV.Models.inspectorModel
@{
    ViewData["Title"] = "Details";
}
<style>
    h1,
    h4,
    a,
    .form-check-label,
    .col-form-label {
        color: white;
    }

    dl.row {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        color: white;
        padding: 10px;
    }

    dt.col-sm-2 {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .center {
        text-align: center;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-group {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        color: white;
        padding: 10px;
    }
</style>
<h1 class="center">Details</h1>
<div>
    <h4 class="center">Item From Inspector Table</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Inspector Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.inspectorName)
        </dd>
        <dt class="col-sm-2">
            Inspector Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.inspectorEmail)
        </dd>
        <dt class="col-sm-2">
            Inspector Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.inspectorMobile)
        </dd>
    </dl>
</div>
<div class="center">
    <a asp-action="Edit" asp-route-id="@Model?.inspectorNo" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>